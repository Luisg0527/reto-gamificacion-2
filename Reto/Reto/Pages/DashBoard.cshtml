@page
@model DashboardModel
@{
    ViewData["Title"] = "Home page";
}
<body>
    <div class="d-flex">
        <div class="flex-grow-1 p-4" style="background-color: #F6F4F1;">

            
             <form method="get">
                <div class="col-md-3 poppins-regular">
                    <input type="date" class="form-control" asp-for="SelectedDate" onchange="this.form.submit()">
                </div>
            </form>

            <div class="row mt-4">
                <div class="col-md-3 poppins-bold">
                    <div class="card p-3 text-center">
                        <p class="fw-bold text-title">Ingresos Totales</p>
                        <span>@Model.metricas.ingresos.ToString("C")</span>
                    </div>
                </div>
                <div class="col-md-3 poppins-bold">
                    <div class="card p-3 text-center">
                        <p class="fw-bold text-title">Ganancia Neta Total</p>
                        <span>@Model.metricas.ganancias.ToString("C")</span>
                    </div>
                </div>
                <div class="col-md-3 poppins-bold">
                    <div class="card p-3 text-center">
                        <p class="fw-bold text-title">Ã“rdenes Totales</p>
                        <span>@Model.metricas.ordenes</span>
                    </div>
                </div>
                <div class="col-md-3 poppins-bold">
                    <div class="card p-3 text-center">
                        <p class="fw-bold text-title">Visitas Totales</p>
                        <span>@Model.metricas.visistas</span>
                    </div>
                </div>
            </div>

            <div class="row mt-4 poppins-bold">
                <div class="col-md-6">
                    <div class="card p-3">
                        <p class="fw-bold text-title">Principales proveedores</p>
                        <img src="/images/pie-chart.jpg" class="img-fluid" alt="Pie Chart">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <p class="fw-bold text-title">Ventas</p>
                        <img src="/images/bar-chart.jpg" class="img-fluid" alt="Bar Chart">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
